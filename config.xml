<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
  xmlns:gap = "http://phonegap.com/ns/1.0"
  id        = "com.gabe2001.slmc.suite"
  versionCode="1" 
  version   = "0.0.2">
   
  <name>slm.c Suite</name>
  
  <description>
    slm.c apps suite 
  </description>
  
  <author href="http://www.slotracinglemans.com" email="gabe.inabnit@gmail.com">
    gabe, wkloppen
  </author>

  <plugin name="Media" value="org.apache.cordova.AudioHandler" />

  <feature name="android.permission.RECORD_AUDIO" />
  <feature name="android.permission.MODIFY_AUDIO_SETTINGS" />
  <feature name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <feature name="android.permission.INTERNET" />

  <preference name="orientation" value="default" />
  <preference name="target-device" value="universal" />
  <preference name="fullscreen" value="false" />
  <preference name="webviewbounce" value="true" />
  <preference name="prerendered-icon" value="true" />
  <preference name="stay-in-webview" value="false" />
  <preference name="ios-statusbarstyle" value="black-opaque" />
  <preference name="detect-data-types" value="true" />
  <preference name="exit-on-suspend" value="false" />
  <preference name="show-splash-screen-spinner" value="true" />
  <preference name="auto-hide-splash-screen" value="true" />
  <preference name="disable-cursor" value="false" />
  <preference name="android-minSdkVersion" value="7" />
  <preference name="android-installLocation" value="auto" />

  <icon src="icon.png" />
  <icon gap:platform="webos" src="resources/icon-64.png" />
    
  <gap:splash gap:platform="android" gap:density="ldpi" src="resources/splash.png" />
  <gap:splash gap:platform="android" gap:density="hdpi" src="resources/splash_480x800.png" />
  <gap:splash gap:platform="ios" width="320" height="480" src="resources/splash_iphone4.png" />
  <gap:splash gap:platform="ios" width="320" height="568" src="resources/splash_iphone5.png" />
  

</widget>
